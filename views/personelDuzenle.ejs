                                    <label for="dogum_yeri">Doğum Yeri</label>
                                    <select class="form-control form-select" id="dogum_yeri" name="dogum_yeri" required>
                                        <option selected value="<%= element.dogum_yeri %> ">
                                            <%= element.dogum_yeri %>
