                                    <input type="number" class="form-control" id="asi_doz" placeholder="Aşı Doz"
                                        name="asi_doz" value="<%=element.asi_doz%>">
                                </div>
                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-success btn-lg">Güncelle</button>
                                    <a href="/" class="btn btn-info btn-lg mx-4">İptal</a>
                                </div>

                            </div>
                        </div>



                    </div>
                </div>
            </form>
            <% }) %>
    </div>












    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
        integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
