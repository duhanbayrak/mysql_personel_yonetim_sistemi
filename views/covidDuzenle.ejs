<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <title>Personel Yönetim</title>
</head>

<body class="bg-light">
    <h1 class="text-center mt-4">Covid Bilgisi Ekle</h1>

    <div class="container">
        <%results.forEach(e => { %>

      
        <form action="/covidEkle/<%e.covid_id %> " method="POST">
            <div class="container px-4 col-lg-9">
    
                <div class="row gx-5">
                    <div class="col">
                        <div class="p-3">
                            <div class="form-group">
                               
                                <label for="personel_id">Personel ID</label>
                                <div class="input-group mb-3">
                                    <input type="text" class="form-control" id="personel_id" placeholder="Personel ID" name="personel_id" required value="<%= e.personel_id %> ">
                                  </div>
                            </div>
    
                            
                            <div class="form-group mt-2">
                                <label for="baslangic_tarihi">Başlangıç Tarihi</label> 
                                <%var date_baslangic = e.baslangic_tarihi.toISOString().slice(0, 10);%> 
                                <input type="date" class="form-control" id="baslangic_tarihi" name="baslangic_tarihi" required value="<%=date_baslangic%>">
                            </div>

                            <div class="form-group mt-2">
                                <label for="bitis_tarihi">Bitiş Tarihi</label> 
                                <%var date_bitis = e.bitis_tarihi.toISOString().slice(0, 10);%> 
                                <input type="date" class="form-control" id="bitis_tarihi" name="bitis_tarihi" required value="<%=date_bitis%>">
                            </div>

                            <div class="form-group mt-2">
                                <label for="belirtiler">Belirtiler</label>
                                
                                <textarea class="form-control" name="belirtiler" id="belirtiler" cols="85" rows="10" placeholder="Belirti1, Belirti2, ... şeklinde ekleyiniz" required><%= e.belirtiler %></textarea>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-success btn-lg">Ekle</button>
                                <a href="/" class="btn btn-info btn-lg mx-4">İptal</a>
                            </div>
    
                        </div>
                    </div>
                   
                    
    
                </div>
            </div>
        </form>
        <% }) %> 
    </div>












    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
        integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
        integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"
        integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6"
        crossorigin="anonymous"></script>
</body>

</html>